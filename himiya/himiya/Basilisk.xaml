                        <Frame CornerRadius="20" HasShadow="True" >
                            <Image Source="uV5ybeGL1P0.jng"/>
                        </Frame>
                    </StackLayout>

                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
